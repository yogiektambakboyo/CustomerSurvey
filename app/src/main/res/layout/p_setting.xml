<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="match_parent" android:background="#fafffb" android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="64dip" android:layout_marginBottom="10dip"
                  android:layout_gravity="center" android:background="#1abc9c">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_setting" android:layout_gravity="center"
                android:layout_marginLeft="5dip"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="64dip"
                android:text="SETTING"
                android:textSize="25sp"
                android:textColor="@android:color/white" android:textStyle="bold"
                android:gravity="center_vertical|left" android:layout_gravity="center" android:layout_marginLeft="10dip"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingTop="5dip" android:paddingBottom="5dip">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip"
                android:layout_marginBottom="5dip">
            <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="Web Server"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Setting_WebServer" android:hint="192.168.xx.xx:xx/x"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip"
                android:layout_marginBottom="5dip">
            <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="User"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Setting_User" android:hint="User Login"
                android:textSize="14sp"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip"
                android:layout_marginBottom="5dip">
            <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="Password"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Setting_Password" android:hint="Password Login"
                android:textSize="14sp"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingTop="10dip" android:paddingBottom="10dip"
            android:layout_marginTop="20dip" android:paddingLeft="20dip" android:paddingRight="20dip">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:id="@+id/Setting_BtlSubmit" android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center" android:layout_weight="1" style="@style/btnStyleGreen"/>
    </LinearLayout>

</LinearLayout>


