<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#1abc9c</item>
        <item name="android:titleTextStyle">@style/MyActionBatText</item>
    </style>

    <style name="MyActionBatText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
    </style>

    <string name="menu_settings">Settings</string>

    <style name="btnStyleWhite" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5d6153</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:padding">10dip</item>
    </style>

